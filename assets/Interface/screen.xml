<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<nifty xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://nifty-gui.lessvoid.com/nifty-gui" xsi:schemaLocation="https://raw.githubusercontent.com/void256/nifty-gui/1.4/nifty-core/src/main/resources/nifty.xsd https://raw.githubusercontent.com/void256/nifty-gui/1.4/nifty-core/src/main/resources/nifty.xsd">
    <useControls filename="nifty-default-controls.xml"/>
    <useStyles filename="nifty-default-styles.xml"/>
    <screen id="start">
        <layer id="background" childLayout="center">
            <image id="" filename="Interface/start-background.png"/>
        </layer>
        <layer id="foreground" childLayout="vertical">
            <panel id="panel_top" height="25%" width="75%" align="center" childLayout="center"/>
            <panel id="panel_mid" height="50%" width="75%" align="center" childLayout="center"/>
            <panel id="panel_bottom" height="25%" width="75%" align="center" childLayout="horizontal">
                <panel id="panel_bottom_left" height="50%" width="50%" childLayout="center" valign="center">
                    <control name="button" id="StartButton" align="center" label="Start" valign="center"/>
                </panel>
                <panel id="panel_bottom_right" height="50%" width="50%" childLayout="center" valign="center">
                    <control name="button" id="QuitButton" align="center" label="Quit" valign="center"/>
                </panel>
            </panel>
        </layer>
    </screen>
    <screen id="hud">
        <layer id="GLayer2" childLayout="center">
            <image id="GImage1" filename="Interface/hud-frame.png"/>
        </layer>
        <layer id="GLayer3" childLayout="horizontal">
            <panel id="panel_left" height="100%" width="80%" childLayout="vertical"/>
            <panel id="panel_right" height="100%" width="20%" childLayout="vertical">
                <panel id="panel_top_right1" height="15%" width="100%" childLayout="center">
                    <control name="label" id="" text="123" height="100%" color="#000" width="100%"/>
                </panel>
                <panel id="panel_top_right2" height="15%" width="100%" childLayout="center">
                    <image id="GImage2" height="50%" width="30%" align="center" filename="Interface/face1.png" valign="center"/>
                </panel>
                <panel id="panel_bot_right" height="70%" width="100%" valign="center"/>
            </panel>
        </layer>
    </screen>
    <screen id="GScreen2"/>
    <screen id="GScreen3"/>
</nifty>
